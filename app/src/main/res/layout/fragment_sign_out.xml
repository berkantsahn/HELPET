<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tw_blue_dark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:id="@+id/linLayout1">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/linLayout1"
        android:id="@+id/linLayout2">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/tw_blue_darker"
            android:textAlignment="center"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Çıkış yapmak istiyor musunuz?"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:id="@+id/tvSignOut"
                android:textSize="15sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSignOut"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Evet"
                android:background="@color/tw_blue_dark"
                android:gravity="center"
                android:textSize="15sp"
                android:id="@+id/tvYesSignOut"
                android:onClick="onClick"
                android:clickable="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvYesSignOut"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:text="Hayır"
                android:background="@color/tw_blue_dark"
                android:gravity="center"
                android:textSize="15sp"
                android:id="@+id/tvNoSignOut"
                android:clickable="true"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_below="@id/linLayout2">

    </LinearLayout>







</RelativeLayout>