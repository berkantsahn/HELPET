<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/activity_profileid"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linLayout1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="125dp"
                    android:src="@drawable/logo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linLayout1"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:background="@drawable/trans_white_background"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kayıt Ol"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="monospace"
                    android:textAlignment="center"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ad Soyad *"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="-8dp"
                    android:layout_marginLeft="8dp"
                    />



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:background="@drawable/rounded_white"
                        android:fontFamily="monospace"
                        android:id="@+id/input_name_register"
                        android:drawableLeft="@drawable/ic_person"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:maxLength="43"
                        />

                </android.support.design.widget.TextInputLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-Posta *"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="-8dp"
                    android:layout_marginLeft="8dp"
                    />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/rounded_white"
                        android:fontFamily="monospace"
                        android:id="@+id/input_email_register"
                        android:drawableLeft="@drawable/ic_email"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"/>


                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kullanıcı Adı *"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="-8dp"
                    android:layout_marginLeft="8dp"
                    />



                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:background="@drawable/rounded_white"
                        android:fontFamily="monospace"
                        android:id="@+id/input_username_register"
                        android:drawableLeft="@drawable/ic_person2"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:maxLength="15"/>


                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Şifre *"
                    android:textAlignment="textStart"
                    android:layout_gravity="start"
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="-8dp"
                    android:layout_marginLeft="8dp"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/input_password_register"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white"
                        android:drawableLeft="@drawable/ic_lock"
                        android:fontFamily="monospace"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:singleLine="false"
                        android:maxLength="15"/>

                </android.support.design.widget.TextInputLayout>
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                     android:gravity="center"
                    >
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="2dp"
                        android:textColor="@color/black"
                        android:id="@+id/sozlesme"
                        android:buttonTint="@color/blue_light"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/kullaniciSozlesmesi"
                        android:text="Kullanım Sözleşmesini kabul ediyorum."
                        android:textStyle="italic"
                        android:layout_marginBottom="2dp"
                        android:textSize="12sp"
                        android:textColor="@color/blue_dark"
                        />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Kayıt Ol"
                    android:id="@+id/btn_kayit"
                    android:padding="12dp"
                    android:fontFamily="monospace"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_white_button"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="* ile belirtilen alanlar doldurulmak zorundadır."
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#A82323"
                    />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</merge>